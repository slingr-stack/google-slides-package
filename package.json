{
    "name": "googleslides",
    "label": "Google Slides",
    "dependencies": [
        {
            "type": "service",
            "name": "http",
            "version": "v1.7.0",
            "instanceId": "shared"
        },
        {
            "type": "package",
            "name": "oauth",
            "version": "v1.0.33"
        }
    ],
    "configurationBuilder": "/configurationBuilder.js",
    "configuration": [
        {
            "name": "authenticationMethod",
            "label": "Authentication Method",
            "required": true,
            "defaultValue": "oAuth2",
            "type": "buttonsGroup",
            "typeOptions": {
                "allowCustom": false,
                "possibleValues": [
                    {
                        "label": "JWT",
                        "name": "jwt"
                    },
                    {
                        "label": "OAuth 2.0",
                        "name": "oAuth2"
                    }
                ]
            }
        },
        {
            "name": "serviceAccountEmail",
            "label": "Service Account Email",
            "type": "text",
            "description": "The email from service account created.",
            "required": "config.authenticationMethod == 'jwt'",
            "visibility": "config.authenticationMethod == 'jwt'"
        },
        {
            "label": "Private key",
            "name": "privateKey",
            "description": "The private key associated to the service account.",
            "required": "config.authenticationMethod == 'jwt'",
            "type": "password",
            "visibility": "config.authenticationMethod == 'jwt'"
        },
        {
            "label": "Client Id",
            "name": "clientId",
            "description": "The ID for your client application registered with the API provider.",
            "required": "true",
            "type": "text",
            "visibility": "config.authenticationMethod == 'oAuth2'"
        },
        {
            "label": "Client Secret",
            "name": "clientSecret",
            "description": "The client secret given to you by the API provider",
            "required": "config.authenticationMethod == 'oAuth2'",
            "type": "text",
            "visibility": "config.authenticationMethod == 'oAuth2'"
        },
        {
            "label": "Scope",
            "name": "scope",
            "description": "The scope of access you are requesting, which may include multiple space-separated values.",
            "required": "true",
            "type": "text"
        },
        {
            "label": "State",
            "name": "state",
            "description": "An opaque value to prevent cross-site request forgery.",
            "type": "text"
        },
        {
            "name": "oauthCallback",
            "label": "OAuth callback",
            "description": "The OAuth callback to configure in your Google Drive App",
            "type": "label",
            "value": "config.AUTH_CALLBACK_URL+'/authCallback'"
        },
        {
            "name": "GOOGLESLIDES_API_BASE_URL",
            "label": "Google Slides Api Url",
            "type": "label",
            "value": "https://slides.googleapis.com/v1"
        }
    ],
    "events": [],
    "metadata": [
        {
            "type": "script",
            "namespace": "api",
            "path": "/scripts/api.js"
        },
        {
            "type": "script",
            "namespace": "utils",
            "path": "/scripts/utils.js"
        }
    ]
}